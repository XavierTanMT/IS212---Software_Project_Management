@startuml c4_class
!include <C4/C4_Context>

title C4 - Code

class User {
  - name: string
  - email: string
  - email: string
  + createTask(): Task
  + deleteTask(Task): Task
  + updateTask(Task): Task
  + viewTask(Task): Task
  + changePassword(): Task
}

class Task {
  - TaskName: VARCHAR
  + method(type): type
  +addAttachment(Attachment): void
  +getAttachments(): List<Attachment>
}

class Admin {
  - attribute: type
  + method(): Type
}

class Manager {
  - attribute: type
  + assignTask(Task, List<Staff>): Bool
}

class Staff {
  - attribute: type
  + method(): Type
}

class Attachment {
  -fileName: string
  -filePath: string
  -uploadedBy: User
  -uploadDate: DateTime
}

Task "1" o-- "*" Attachment : has
User "1" o-- "*" Attachment : uploads

User ||--o{ Admin : extends
User ||--o{ Manager : extends  
User ||--o{ Staff : extends

User --> Task : creates/manages

@enduml